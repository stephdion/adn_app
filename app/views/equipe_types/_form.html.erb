<div class="col-md-6">
<%= form_for(@equipe_type) do |f| %>
  <% if @equipe_type.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@equipe_type.errors.count, "error") %> prohibited this equipe_type from being saved:</h2>

      <ul>
      <% @equipe_type.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name , class: "form-control" %>
  </div>
  <div class="styled-select">
    <%= f.label :organization_id %><br>
    <%= f.collection_select :organization_id, @current_user.organizations, :id, :name, {}, class: "form-control" %>
  </div>
  <div class="actions">
    <%= f.submit t(:button_submit), class: "btn btn-default" %>
    <%= link_to t(:general_back), equipe_types_path, class: "btn btn-default", :style=>"display:inline;margin-left:10px;" %>
  </div>
<% end %>
</div>