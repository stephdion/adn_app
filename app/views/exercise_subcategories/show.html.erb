<% provide(:title, @exercise_subcategory.name) %>
<div class="margin-bottom">
<h1_left><%= @exercise_subcategory.name %></h1left>
</div>

<p>
  <b>Name:</b>
  <%= @exercise_subcategory.name %>
</p>

<% if @exercise_subcategory.exercises.any? %>
  <%= I18n.t(:subcategory_contains_exercises) %><br>
    <% @exercise_subcategory.exercises.each do |exercise| %>
    	 <%= image_tag exercise.image.url(:thumbnail) %>
    	 <%= link_to exercise.name, exercise%><br>
    <% end %>
<% end %>

<br><br>
<%= link_to t(:categories_exercises), exercise_categories_path %>


