<% provide(:title, 'Modifier l\'organization') %>
<h1 class="text-center">Modifier l'organization</h1>

<div class="col-md-6 col-md-offset-3">
  <div class="span6">
    <%= form_for (@organization) do |f| %>
        <p>
          <%= f.label :Nom %><br>
          <%= f.text_field :name, :class=>"form-control" %>
        </p>

        <p>
          <%= f.label :description %><br>
          <%= f.text_area :description, :class=>"form-control" %>
        </p>

        <p>
          <%= f.submit class: "btn btn-default" %>
          <%= link_to t(:general_back), organizations_path, class: "btn btn-default", :style=>"display:inline;margin-left:10px;" %>
        </p>
    <% end %>
  </div>
</div>