<div class="col-md-6">
  <%= form_for(@position) do |f| %>
    <% if @position.errors.any? %>
      <div id="error_explanation">
        <b><%= pluralize(@position.errors.count, "erreur") %> <%=t("helpers.errors", model: "la position")%>:</b>
        <ul>
        <% @position.errors.full_messages.each do |msg| %>
          <li>- <%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    <div class="styled-select">
      <%= f.label :equipe_type_id %><br />
      <%= f.collection_select :equipe_type_id, @current_organization.equipe_types, :id, :name, {},:class => "selectpicker form-control" %>
    </div>
    <div class="field">
      <%= f.label :name %><br />
      <%= f.text_field :name, :class=>"form-control" %>
    </div>
    <div class="actions">
      <%= f.submit t(:button_submit), class: "btn btn-default"%>
      <%= link_to t(:general_back), positions_path, class: "btn btn-default", :style=>"display:inline;margin-left:10px;"  %>
    </div>
  <% end %>
</div>

