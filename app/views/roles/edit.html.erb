<% provide(:title, 'Modifier un role>') %>
<h1 class="text-center">Modifier un role</h1>

<div class="col-md-6 col-md-offset-3">
  <div class="span6">
    <%= form_for (@role) do |f| %>
        <p>
          <%= f.label :name %><br>
          <%= f.text_field :name, :class=>"form-control" %>
        </p>

        <p>
          <%= f.label :description %><br>
          <%= f.text_area :description, :class=>"form-control" %>
        </p>

        <p>
          <label>Code</label>
          <%= @role.code %>
        </p>

        <p>
          <%= f.submit class: "btn btn-default" %>
          <%= link_to t(:general_back), roles_path, class: "btn btn-default", :style=>"display:inline;margin-left:10px;" %>
        </p>
    <% end %>
  </div>
</div>