  <h1 class="text-center">Index des SCAT2S</h1>

  <%= link_to I18n.t(:scat2_new), new_scat2_path, class: "btn btn-default btn-lg margin-bottom-10" %>

  <table class="table table-hover table-striped table-responsive">
    <tr>
      <th>Athlete</th>
      <th>Evaluation datetime</th>
      <th>Sport type</th>
      <th>Score</th>
      <th></th>
    </tr>
    <% @scat2s.each do |scat2| %>
      <tr>
        <td><%= scat2.user.name %></td>
        <td><%= scat2.date_to_s scat2.evaluation_datetime %></td>
        <td><%= scat2.equipe_type.name %></td>
        <td><%= scat2.get_score %></td>
        <td class="td-last-3">
          <%= link_to(scat2) do %>
            <span class="glyphicon glyphicon-eye-open"></span>
          <% end %>
          <%= link_to(edit_scat2_path(scat2)) do %>
            <span class="glyphicon glyphicon-pencil"></span>
          <% end %>
          <%= link_to scat2, method: :delete, data: { confirm:  I18n.t(:button_confirm_delete) } do %>
            <span class="glyphicon glyphicon-trash"></span>
          <% end %>
        </td>
      </tr>
    <% end %>
  </table>