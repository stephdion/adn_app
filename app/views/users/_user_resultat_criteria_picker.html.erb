<div class="search_box_border">
	<%= form_tag (user_path(@user) )+ '/ajax_result_eval', :id => 'form_result_picker', :method => 'get', :remote => true do %>

        		<div class="input-wrapper-rapport">
					<p class="title-rapport-field"><%= I18n.t(:criteria_start_date) %></p>
					<div class="form-group">
						<div id="datetimepicker5" class="input-group date" data-date-format="YYYY-MM-DD">
						<%= text_field_tag :resultat_start_date, params[:resultat_start_date], :class => "form-control search_form", 'data-behaviour'=> 'datepicker' %>
						<span class="input-group-addon">
						<span class="glyphicon glyphicon-calendar img-calendar"></span>
						</span>
						</div>
					</div>
				</div>

				<div class="input-wrapper-rapport">
					<p class="title-rapport-field"><%= I18n.t(:criteria_end_date) %></p>
					<div class="form-group">
						<div id="datetimepicker6" class="input-group date" data-date-format="YYYY-MM-DD">
							<%= text_field_tag :resultat_end_date, params[:resultat_end_date], :class => "form-control search_form",  'data-behaviour'=> 'datepicker' %>
							<span class="input-group-addon">
							<span class="glyphicon glyphicon-calendar img-calendar"></span>
							</span>
						</div>
					</div>
				</div>

				<div class="input-wrapper-rapport wrapper-rapport-marge">
					<p class="title-rapport-field">Ã‰valuation</p>
	        		<%= select_tag :evaluation, options_from_collection_for_select(@current_organization.evaluations.order(:name), "id", "name", params[:evaluation]), multiple: true, :class => "form-control" %>
        		</div>

				<div class="wrapper-rapport-row">
					<p class="title-rapport-section"><%= I18n.t(:general_score) %></p>
					<p class="search_text_n_inputs"><%= I18n.t(:general_low) %></p>
					<%= text_field_tag :low_score, params[:low_score], :class => "form-control search_form highLow" %>
					<p class="search_text_n_inputs"><%= I18n.t(:general_high) %></p>
					<%= text_field_tag :high_score, params[:high_score], :class => "form-control search_form highLow" %>
				</div>
				<div class="wrapper-rapport-row">
					<p class="title-rapport-section"><%= I18n.t(:general_differential) %></p>
					<p class="search_text_n_inputs"><%= I18n.t(:general_low) %></p>
					<%= text_field_tag :low_diff, params[:low_diff], :class => "form-control search_form highLow" %>
					<p class="search_text_n_inputs"><%= I18n.t(:general_high) %></p>
					<%= text_field_tag :high_diff, params[:high_diff], :class => "form-control search_form highLow" %>
				</div>
				<div class="input-wrapper-row">
					<p class="title-rapport-field"><%= I18n.t(:general_team) %></p>
					<%= select_tag 'multi_equipe_select', options_from_collection_for_select(@all_teams, "id", "name", @equipes), multiple: true,
						:id => "team_selected" %>
				</div>
				<div class="input-wrapper-row">
					<p class="title-rapport-field"><%= I18n.t(:user_legend_special_cases) %></p>
					<%= select_tag :special_case_test, options_from_collection_for_select(@special_cases, "id", "name", params[:special_case_test]), {:class => "form-control select-stretch", :style => "padding:0;"} %>
					<p class="search_text_n_inputs"><%= I18n.t(:general_value) %></p>
					<%= text_field_tag :special_case_value, params[:special_case_value], :class => "form-control search_form highLow" %>

				</div>
				<div class="input-wrapper-rapport wrapper-rapport-extend spinner-ajust">
					<%= submit_tag I18n.t(:search_refresh_resultats), :id => "result_eval_update", :class => "btn btn-default btn-submit", :remote => true %>
						<%= render :file => "spinner/spinner" %>
				</div>

	<%end%>
</div>
