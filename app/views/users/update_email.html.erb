<% provide(:title, I18n.t(:user_update_email)) %>
<h1><%= t :user_update_email %></h1>

<div class="span6">
  <%= form_for(@user, :url => {:action => "update_email"}) do |f| %>
      <%= render 'shared/error_messages' %>

      <%= f.label :last_name %>
      <%= f.text_field :last_name %>

      <%= f.label :first_name %>
      <%= f.text_field :first_name %>

      <%= f.label :email %>
      <%= f.text_field :email %>
      <%= f.submit I18n.t(:user_update_email_btn), class: "btn btn-large btn-primary" %>
      </div>
  <% end %>
