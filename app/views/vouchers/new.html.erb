<% provide(:title, 'New Voucher') %>
<h1 class="text-center">New Voucher</h1>

<div class="col-md-6 col-md-offset-3">
  <div class="span6">
    <%= form_for :voucher, url: vouchers_path do |f| %>
        <p>
          <%= f.label :token %><br>
          <%= f.text_field :token, :class=>"form-control" %>
        </p>

        <p>
          <%= f.label :description %><br>
          <%= f.text_area :description, :class=>"form-control" %>
        </p>
        <p>
          <%= f.label :is_enabled %>
          <%= f.check_box :is_enabled, :style=>"margin-left:10px;" %>
        </p>

        <%= f.label :role %><br>
        <%= f.select(:role,
                     Role.all.collect { |role|  [role.name, role.id] },
                     {}, {:class=>'selectpicker form-control'})%>
        <%= f.label :organization %><br>
        <%= f.select(:organization,
                     Organization.all.collect { |organization|  [organization.name, organization.id] },
                     {}, {:class=>'selectpicker form-control'})%>
          <%= f.submit  class: "btn btn-default"%>
          <%= link_to t(:general_back), vouchers_path, class: "btn btn-default", :style=>"display:inline;margin-left:10px;" %>
    <% end %>
  </div>
</div>